    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfetInputEventName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInputEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:textSize="14sp"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ilTextInputLayout1"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            app:endIconDrawable="@drawable/ic_date"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:endIconMode="custom"
            app:endIconTint="@color/abu"
            tools:layout_editor_absoluteX="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInputTanggalEvent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Time"
                android:textSize="14sp"

                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ilTextInputLayout4"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            app:endIconDrawable="@drawable/ic_clock"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:endIconMode="custom"
            app:endIconTint="@color/abu"
            tools:layout_editor_absoluteX="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInputWaktuEvent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Time"
                android:textSize="14sp"

                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ilTextInputLayout5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:endIconDrawable="@drawable/ic_date"
        app:endIconTint="@color/abu"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:endIconMode="custom"

        tools:layout_editor_absoluteX="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInputTanggalReminder"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reminder Date"
            android:textSize="14sp"

            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ilTextInputLayout6"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
