<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="24dp"
    tools:context=".InputActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ilTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInputEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:textSize="14sp"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ilTextInputLayout3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:endIconDrawable="@drawable/ic_clock"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"   app:endIconMode="custom"

        tools:layout_editor_absoluteX="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInputTanggal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pick Event Date"
            android:textSize="14sp"

            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout


        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="24dp">

        <LinearLayout
            android:id="@+id/btnEventDate"
            android:background="@drawable/backgrounddate"
            android:layout_width="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"

            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/tvPickEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Event Date"/>
            <ImageView
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector"
                app:tint="@color/abu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnEventTime"
            android:layout_marginStart="10dp"
            android:background="@drawable/backgrounddate"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPickEventTime"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Event Time"/>
            <ImageView
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector"
                app:tint="@color/abu" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:background="@drawable/backgrounddate"
        android:id="@+id/InputCalender"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="24dp">

        <TextView
            android:id="@+id/tvReminderDate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Reminder Date"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            app:tint="@color/abu" />
    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:background="@drawable/backgrounddate"
        android:id="@+id/InputRem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="24dp">

        <TextView
            android:id="@+id/tvReminderTime"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Reminder Time"/>


        <ImageView
            android:id="@+id/btn_date"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock"
            app:tint="@color/abu" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ilTextInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAdditionalNote"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Note"
            android:textSize="14sp"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

   <Button
       android:id="@+id/btn_save"
       android:padding="16dp"
       android:layout_margin="16dp"
       android:textAllCaps="false"
       android:textColor="@color/white"
       android:backgroundTint="@color/pinky"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Save"/>
</LinearLayout>